<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/secretText"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        />

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/secret_text_2"
       android:id="@+id/secret2"
       android:layout_centerInParent="true"
       android:textStyle="bold"

       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secret_text_1"
        android:id="@+id/secret1"
        android:layout_above="@+id/secret2"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secret_text_3"
        android:id="@+id/secret3"
        android:layout_below="@+id/secret2"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        />


</RelativeLayout>